@model IEnumerable<EstadoViewAllModel>

<partial name="_MensagemPartial" />

<table id="view-allTable" class="table table-striped table-hover w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAtivo)
            </th>
            <th>
                <i class="bi bi-sliders"></i>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capital)
                </td>
                <td>
                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(modelItem => item.IsAtivo, new { @class = "form-check-input", disabled="disabled"} )
                    </div>
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Estado",new {Id=item.Id},Context.Request.Scheme)','Editar Estado')" class="btn btn-sm btn-primary text-white" title="Editar Estado"><i class="bi bi-pencil-square"></i></a>
                    <a onclick="showInPopup('@Url.Action("Details","Estado",new {Id=item.Id},Context.Request.Scheme)','Visualizar Estado')" class="btn btn-sm btn-secondary text-white" title="Visualizar Estado"><i class="bi bi-file-ruled-fill"></i></a>
                    <form asp-action="Delete" method="post" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" value="@item.Id" name="Id" />
                        <input type="hidden" value="&nbsp;<strong>@item.Estado</strong>" name="TargetName" />
                        <button type="submit" class="btn btn-sm btn-danger" title="Excluir Estado"><i class="bi bi-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
