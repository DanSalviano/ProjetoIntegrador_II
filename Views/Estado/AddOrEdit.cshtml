@model EstadoAddOrEditViewModel

@{
    Layout = null;
}

<div class="m-auto">
    <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="IsNovoCadastro" type="hidden" />
        <div class="row">
            <div class="form-group mb-2 col-md-12">
                <label for="Id" class="control-label">UF</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group mb-2 col-md-12 col-xl-6">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 col-md-12 col-xl-6">
                <label asp-for="Capital" class="control-label"></label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="form-check form-switch">
                <input asp-for="@Model.IsAtivo" class="form-check-input">
                <label asp-for="@Model.IsAtivo" class="form-check-label"></label>
            </div>
        </div>
        <div class="modal-footer row justify-content-end gap-2 pt-3 pb-0">
            <button type="button" class="btn btn-secondary col-md-2" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary col-md-2">Salvar</button>
        </div>
    </form>
</div>
