@model IEnumerable<CidadeViewAllModel>

<partial name="_MensagemPartial" />

<table id="view-allTable" class="table table-striped table-hover w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAtivo)
            </th>
            <th>
                <i class="bi bi-sliders"></i>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoId)
                </td>
                <td>
                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(modelItem => item.IsAtivo, new { @class = "form-check-input", disabled="disabled"} )
                    </div>
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Cidade",new {id=item.Id},Context.Request.Scheme)','Editar Cidade')" class="btn btn-sm btn-primary text-white" title="Editar Cidade"><i class="bi bi-pencil-square"></i></a>
                    <a onclick="showInPopup('@Url.Action("Details","Cidade",new {id=item.Id},Context.Request.Scheme)','Visualizar Cidade')" class="btn btn-sm btn-secondary text-white" title="Visualizar Cidade"><i class="bi bi-file-ruled-fill"></i></a>
                    <form asp-action="Delete" method="post" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" value="@item.Id" name="Id" />
                        <input type="hidden" value="&nbsp;<strong>@item.Cidade</strong>" name="TargetName" />
                        <button type="submit" class="btn btn-sm btn-danger" title="Excluir Cidade"><i class="bi bi-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
