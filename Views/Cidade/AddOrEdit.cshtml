@model CidadeAddOrEditViewModel

@{
    Layout = null;
}

<div class="m-auto">
    <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="form-group mb-3 col-md-12 col-xl-6">
                <label asp-for="EstadoId" class="control-label"></label>
                <select asp-for="EstadoId" asp-items="@Model.Estados" class="form-select"></select>
                <span asp-validation-for="EstadoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 col-md-12 col-xl-6">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group form-check mb-3">
        <label class="form-check-label">
        <input class="form-check-input" asp-for="IsAtivo" /> @Html.DisplayNameFor(model => model.IsAtivo)
        </label>
        </div>*@
        <div class="form-group mb-3">
            <div class="form-check form-switch">
                <input asp-for="@Model.IsAtivo" class="form-check-input">
                <label asp-for="@Model.IsAtivo" class="form-check-label"></label>
            </div>
        </div>
        <div class="modal-footer row justify-content-end gap-2 pt-3 pb-0">
            <button type="button" class="btn btn-secondary col-md-2" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" id="submit" class="btn btn-primary col-md-2">Salvar</button>
        </div>
    </form>
</div>
